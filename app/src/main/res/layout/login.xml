<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/idtext_signIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:text="LOGIN"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/idtext_signUP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/mdtp_white"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:text="SIGN UP"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="sans" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <EditText
            android:singleLine="true"
            android:imeOptions="actionNext"

            android:drawableLeft="@drawable/ic_person_pin_black_24dp"
            android:drawablePadding="10dp"
            android:id="@+id/inUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:background="@drawable/bg_edittextlogin"
            android:hint="Username"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/edittextcursorcolor"
            android:textSize="15sp" />


        <EditText
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="10dp"

            android:id="@+id/inPass"
            android:layout_width="match_parent"
            android:imeOptions="actionNext"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittextlogin"
            android:hint="Password"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/edittextcursorcolor"
            android:textSize="15sp"
            android:inputType="textPassword"
            />

        <EditText
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="10dp"
            android:imeOptions="actionDone"
            android:id="@+id/inPass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:background="@drawable/bg_edittextlogin"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/edittextcursorcolor"
            android:hint="Confirm Password"
            android:padding="10dp"
            android:textSize="15sp"
            android:visibility="gone"
        android:inputType="textPassword"/>


    </LinearLayout>

    <Button
        android:id="@+id/btninfLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <Button
        android:id="@+id/btninfsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:text="Sign Up"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:visibility="gone" />

</LinearLayout>