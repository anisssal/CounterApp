        >

        <EditText
            android:id="@+id/edtketerangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editbg"
            android:hint="Keterangan pertandingan.."
            android:imeOptions="actionNext"
