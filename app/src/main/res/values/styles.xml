<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBarTitle">

        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="hintstyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="themeProgress" parent="Theme.AppCompat.Dialog">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/red</item>
    </style>

    <style name="butonred" >
        <item name="android:background">@drawable/btn_mtop</item>
        <item name="android:textColor">@color/mdtp_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20dp</item>

    </style>

    <style name="textlist">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="titletab" >
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="editText" parent="android:Widget.EditText">
        <item name="android:background">@color/mdtp_white</item>
    </style>

</resources>
